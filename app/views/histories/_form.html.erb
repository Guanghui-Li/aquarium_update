<%= form_for(history) do |f| %>
  <% if history.errors.any? %>
    <div class="card">
      <div class="card-header bg-danger text-white">
        <%= pluralize(history.errors.count, "error") %> prohibited this history from being saved:
      </div>
      <div class="card-body">
        <ul>
        <% history.errors.full_messages.each do |message| %>
          <li class="card-text"><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <form>
    <div class="form-group">
      <%= f.label :livestock_id %>
      <%= f.number_field :livestock_id, id: :history_livestock, :value => history.livestock_id, :readonly => true, class: "form-control"%>
    </div>
    
    <div class="form-group">
      <%= f.label :event_date %>
      <%= f.text_field :event_date, data:{ provide:'datepicker' }, id: :history_event_date, class: "form-control" %>
    </div>
  
    <div class="form-group">
      <%= f.label :event %>
      <%= f.text_area :event, id: :history_event, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <div class="btn-upload-wrapper">
        <button class="btn-upload">Upload Image</button>
        <%= f.file_field :image, id: :history_image, class: "myfile"%>
        <label id="image-label"> </label>
      </div>
    </div>
    
    
    <div class="actions">
      <%= f.submit "Create Event", :class => "btn btn-primary"%>
    </div>
  <form>
<% end %>
