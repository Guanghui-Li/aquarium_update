<p id="notice"><%= notice %></p>

<h1>Statuses</h1>

<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @statuses.each do |status| %>
        <tr>
          <td><%= status.name %></td>
          <td><%= link_to 'Show', status_path(status), class: "btn btn-outline-primary btn-round" %></td>
          <td><%= link_to 'Edit', edit_status_path(status), class: "btn btn-outline-primary btn-round" %></td>
          <td><%= link_to 'Delete', status, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-primary btn-round" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @statuses%>
</div>

<br>

<%= link_to 'New Status', new_status_path, class: "btn btn-primary" %>
