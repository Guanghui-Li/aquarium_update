<p id="notice"><%= notice %></p>

<h1>Tanks</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tanks.each do |tank| %>
      <tr>
        <td><%= link_to tank.name, tank %></td>
        <td><%= link_to 'Edit', edit_tank_path(tank) %></td>
        <td><%= link_to 'Destroy', tank, method: :delete, data: { confirm: 'Are you sure? This action will delete all the existing livestocks that are associated with this tank' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tank', new_tank_path %>
