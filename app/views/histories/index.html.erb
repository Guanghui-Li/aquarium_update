<p id="notice"><%= notice %></p>

<h1>Histories</h1>

<div class="table-responsive">
  <table>
    <thead>
      <tr>
        <th>Livestock</th>
        <th>Event</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @histories.each do |history| %>
        <tr>
          <td><%= history.livestock_id %></td>
          <td><%= history.event %></td>
          <td><%= link_to 'Show', history %></td>
          <td><%= link_to 'Edit', edit_history_path(history) %></td>
          <td><%= link_to 'Destroy', history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

