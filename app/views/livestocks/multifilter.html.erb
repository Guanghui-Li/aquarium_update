        <div class="form-group">
            <%=label_tag :tank, 'Tank: ' %> &nbsp
            <div class="table-responsive">
                <table class=table>
                    <% count = 0 %>
                    <%= collection_check_boxes :tank, :tank_ids, Tank.order('name ASC').where("user_id = " + (current_user.id.to_s if current_user)), :id, :name do |b| %>
                        <% count = count + 1 %>
                        <% if (count-1)%5 == 0%>
                            <%= "<tr>".html_safe%>
                        <% end %>
                            <td>
                                <%= b.label class: "btn btn-primary" do %>
                                    <%= b.label %>
                                    <%= b.check_box class: "badgebox" %>
                                    <span class="badge">&check;</span>
                                <% end %>
                            </td>
